<% unless cart.line_items.empty? %>
<article>
	<% if notice %>
		<aside id="notice"><%= notice %></aside>
	<% end %>
	<h2><%= t('.title') %></h2>
	<table>
		<%= render(cart.line_items) %>
		<tfoot>
			<tr>
				<th colspan="2">Total:</th>
				<td class="price"><%= converted_price(cart.total_price) %></td>
			</tr>
		</tfoot>
	</table>

	<div class="actions">
	<%= button_to t('.empty'), cart, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
	<% unless @order %>
		<%= button_to t('.checkout'), new_order_path(locale: I18n.locale), method: :get, class: "checkout" %>
	<% end %>
	</div>	
</article>
<% end %>